# Ignore IDE configuration files
.idea/
.vscode/

# Ignore Node dependencies
/wp-content/themes/my-theme/node_modules/

# Ignore WordPress core, we only version our content
/wp-admin/
/wp-includes/
/wp-*.php
/index.php
/xmlrpc.php
/license.txt
/readme.html

# Ignore log and temporary files
npm-debug.log
.DS_Store

# Ignore the uploads folder, unless you want to version specific images
/wp-content/uploads/

# Ignore other plugins that are not ours
/wp-content/plugins/*
!/wp-content/plugins/my-plugin/

# Ignore other themes that are not ours
/wp-content/themes/*
!/wp-content/themes/my-theme/

# Ignore cache and other generated files
/wp-content/upgrade/
/wp-content/cache/

# Ignore language files, unless you want to version specific translations
/wp-content/languages/